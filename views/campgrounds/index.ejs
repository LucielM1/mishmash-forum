<% include ../partials/header %>

  <div class="container">
    <header class="jumbotron">
      <div class="container">
        <h1><i class="fab fa-pagelines"></i> Campgrounds</h1>
        <p>View our hand-picked campgrounds from all over the world</p>
        <p>
          <a class="btn btn-success btn-lg" href="/campgrounds/new">Add a new campground</a>
        </p>
      </div>
    </header>
    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
    <% if (typeof searchMessage !== 'undefined') { %>
      <div class="col-md-12">
        <h4><%= searchMessage %></h4>
      </div>
    <% } %>
    <% campgrounds.forEach((campground, index) => { %>
      <div class="col-sm-6 col-md-3">
        <div class="thumbnail">
          <img src="<%= campground.image %>" alt="<%= campground.name %>">
          <div class="caption">
            <h4><%= campground.name %></h4>
          </div>
          <p>
            <a href="/campgrounds/<%= campground._id %>" class="btn btn-success">More info</a>
          </p>
        </div>
      </div>
    <% }); %>
    </div>
  </div>

<% include ../partials/footer %>
