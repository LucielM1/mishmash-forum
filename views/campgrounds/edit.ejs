<% include ../partials/header %>

  <div class="container">
    <div class="row">
      <h1 class="text-center">Edit <%= campground.name %></h1>
      <section class="form-block">
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
          <div class="form-group">
            <label for="input-name">Name</label>
            <input id="input-name" class="form-control" type="text" name="campground[name]" value="<%= campground.name %>" required>
          </div>
          <div class="form-group">
            <label for="input-location">Location</label>
            <input id="input-location" class="form-control" type="text" name="campground[location]" value="<%= campground.location %>" required>
          </div>
          <div class="form-group">
            <label for="input-image">Image url</label>
            <input id="input-image" class="form-control" type="text" name="campground[image]" value="<%= campground.image %>" required>
          </div>
          <div class="form-group">
            <label for="input-cost">Cost</label>
            <input id="input-cost" class="form-control" type="number" name="campground[cost]" value="<%= campground.cost %>" min="0.00" step="0.01" required>
          </div>
          <div class="form-group">
            <label for="input-description">Description</label>
            <input id="input-description" class="form-control" type="text" name="campground[description]" value="<%= campground.description %>" required>
          </div>
          <button class="btn btn-success btn-lg btn-block">Submit</button>
          <a href="/campgrounds">Back to campgrounds</a>
        </form>
      </section>
    </div>
  </div>

<% include ../partials/footer %>
