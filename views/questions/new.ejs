<% include ../partials/header %>

  <div class="container">
    <div class="row">
      <h1 class="text-center">Create a new question</h1>
      <section class="form-block">
        <form id="new-question-form" action="/questions" method="POST" enctype="multipart/form-data">
          <div class="form-group">
            <label for="input-name">Question</label>
            <input id="input-name" class="form-control" type="text" name="name" required>
          </div>
          <div class="form-group">
            <label for="input-description">Description</label>
            <textarea class="form-control" class="form-control" name="description" form="new-question-form" rows="4" cols="70" required></textarea>
          </div>
          <button class="btn btn-success btn-lg btn-block">Submit</button>
          <hr>
          <a href="/questions">Back to questions</a>
        </form>
      </section>
    </div>
  </div>

<% include ../partials/footer %>
