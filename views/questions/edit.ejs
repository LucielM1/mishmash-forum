<% include ../partials/header %>

  <div class="container">
    <div class="row">
      <h1 class="text-center">Edit <%= question.name %></h1>
      <section class="form-block">
        <form id="edit-question-form" action="/questions/<%= question._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
          <div class="form-group">
            <label for="input-name">Name</label>
            <input id="input-name" class="form-control" type="text" name="name" value="<%= question.name %>" required>
          </div>
          <div class="form-group">
            <label for="input-description">Description</label>
            <textarea class="form-control" name="description" form="edit-question-form" rows="4" cols="70" required><%= question.description %></textarea>
          </div>
          <button class="btn btn-success btn-lg btn-block">Submit</button>
          <hr>
          <a href="/questions">Back to questions</a>
        </form>
      </section>
    </div>
  </div>

<% include ../partials/footer %>
